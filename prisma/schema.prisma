generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Importante: PostgreSQL, não SQLite
  url      = env("DATABASE_URL")
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model ImageJob {
  id           String    @id @default(uuid())
  userId       String?   // Para futuro uso com Auth
  prompt       String
  status       JobStatus @default(PENDING)
  imageUrl     String?   @db.Text // @db.Text para URLs longas ou Base64
  errorMessage String?   @db.Text
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([status, createdAt]) // Índice crucial para a performance da fila FIFO
}
